
input:
#include<stdio.h>
int input();
int compute();
int output();
int a,b,sum;
int main()
{
    input();
    compute();
    output();
}
 int input()
 {
     printf("enter two numbers to add");
    scanf("%d %d", &a,&b);
 }
 
 int compute()
 {
      sum=a+b;
 }
 
 int output()
 {
     printf("sum of two numbers = %d",sum);
 }
 
